<html>
  <head>
    <title>🪐 Code Planet</title>
    <link rel="stylesheet" href="/src/style.css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="author" content="Jakub Š. &lt;hello@code-planet.eu&gt;" />
    <meta name="theme-color" content="#161B22" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="manifest" href="/src/manifest.json" />
    <!-- <link rel="apple-touch-icon" sizes="180x180" href="/src/apple-touch-icon-180x180.png" />
    <link rel="shortcut icon" type="image/x-icon" href="/src/favicon-32x32.ico" />
    <link rel="icon" type="image/png" sizes="96x96" href="/src/favicon-96x96.png" /> -->
    <style>
      @font-face {
        font-family: Menlo;
        src: url(/src/Menlo-Regular.woff);
      }
    </style>
  </head>
  <body>
    <div class="preloader-wrapper">
      <div class="preloader">🚀</div>
    </div>

    <div id="main">
      <div id="header"><%- include('_header') %></div>
      <div id="body"><%- body %></div>
      <div id="footer"><%- include('_footer'); %></div>
    </div>
    <script>
      $(document).ready($ => {
        $('body').addClass('preloader-site')
      })
      $(window).on('load', () => {
        $('.preloader-wrapper').fadeOut()
        $('body').removeClass('preloader-site')
      })
    </script>
    <script src="https://storage.ko-fi.com/cdn/scripts/overlay-widget.js"></script>
    <script>
      kofiWidgetOverlay.draw('jsupa', {
        type: 'floating-chat',
        'floating-chat.donateButton.text': 'Support Us',
        'floating-chat.donateButton.background-color': '#323842',
        'floating-chat.donateButton.text-color': '#fff'
      })
    </script>
  </body>
</html>
